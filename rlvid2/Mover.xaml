<Window x:Class="rlvid2.Mover"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rlvid2"
        mc:Ignorable="d"
        Title="Mover" Height="450" Width="200">
    <Grid>
        <ListBox Name="Destinations"
                 SelectedItem="{Binding CurrentMover, Mode=TwoWay}" SelectionChanged="MoverListBox_SelectionChanged"
                 ItemsSource="{Binding Path=MoverItems}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Button Width="128" Content="{Binding Label}" Click="RemoveMover_Click" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>